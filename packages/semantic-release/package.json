  },
  "homepage": "https://github.com/bfra-me/works/tree/main/packages/semantic-release#readme",
  "repository": {
    "directory": "packages/semantic-release",
    "type": "git",
    "url": "https://github.com/bfra-me/works.git"
  },
  "bugs": "https://github.com/bfra-me/works/issues",
  "keywords": [
    "bfra.me",
    "typescript",
    "semantic-release",
    "config",
