  "devDependencies": {
    "@bfra.me/semantic-release": "workspace:*",
    "@bfra.me/tsconfig": "workspace:*",
    "@swc/core": "1.4.6",
    "semantic-release": "23.0.2",
    "tsup": "8.0.2",
