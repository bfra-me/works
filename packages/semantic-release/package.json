{
  "name": "@bfra.me/semantic-release",
  "description": "Semantic Release shareable configuration and plugins for bfra.me.",
  "version": "0.0.0",
  "author": "Marcus R. Brown <contact@bfra.me>",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./lib/index.js",
        "types": "./lib/index.d.ts"
      }
    },
