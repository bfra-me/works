{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../tsconfig/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@bfra.me/es": ["../es/src"],
      "@bfra.me/es/*": ["../es/src/*"]
    },
    "noPropertyAccessFromIndexSignature": false,
    "noEmit": false,
    "outDir": "./lib",
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "package.json"],
  "exclude": ["node_modules", "lib", "test/fixtures"]
}
