{
  "name": "@bfra.me/prettier-config",
  "version": "0.14.1",
  "description": "Shared Prettier configuration for bfra.me",
  "keywords": [
    "bfra.me",
    "config",
    "prettier",
    "prettier-config",
    "shared",
    "works"
  ],
  "homepage": "https://github.com/bfra-me/works/tree/main/packages/prettier-config#readme",
  "bugs": "https://github.com/bfra-me/works/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfra-me/works.git",
    "directory": "packages/prettier-config"
  },
  "license": "MIT",
  "author": "Marcus R. Brown <contact@bfra.me>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "source": "./src/index.ts",
      "default": "./lib/index.js"
    },
    "./prettier.config": "./prettier.config.cjs",
    "./80-proof": "./lib/index.js?printWidth=80",
    "./100-proof": "./lib/index.js?printWidth=100",
    "./120-proof": "./lib/index.js?printWidth=120",
    "./semi": "./lib/index.js?semi=true",
    "./package.json": "./package.json"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src",
    "index.json",
    "prettier.config.cjs",
    "!**/*.map"
  ],
  "scripts": {
    "build": "tsup",
    "postbuild": "prettier --config ./prettier.config.cjs --ignore-path .prettierignore --log-level warn --write .",
    "prepack": "pnpm --filter-prod=\"{.}...\" --loglevel error run build",
    "test": "pnpm --filter-prod=\"{.}...\" --loglevel error run build && vitest run"
  },
  "devDependencies": {
    "@bfra.me/prettier-config": "workspace:*",
    "@bfra.me/tsconfig": "workspace:*",
    "prettier": "3.4.2",
    "tsup": "8.3.5"
  },
  "peerDependencies": {
    "prettier": "^3.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
