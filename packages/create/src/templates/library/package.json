{
  "name": "<%= it.name %>",
  "version": "1.0.0",
  "description": "<%= it.description %>",
  "keywords": [
    "typescript",
    "library"
  ],
  "license": "MIT",
  "author": "<%= it.author %>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.17.1",
    "eslint": "^9.18.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^2.3.5"
  },
  "engines": {
    "node": ">=18"
  }
}
