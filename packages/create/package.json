{
  "name": "@bfra.me/create",
  "version": "0.4.12",
  "description": "A command line utility to create new packages from customizable templates.",
  "keywords": [
    "cli",
    "create",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfra-me/works.git",
    "directory": "packages/create"
  },
  "license": "MIT",
  "author": "Marcus R. Brown <contact@bfra.me>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create": "./dist/cli.js"
  },
  "files": [
    "src",
    "dist",
    "templates",
    "!**/*.map"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "prepack": "pnpm run build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.60.0",
    "@clack/prompts": "0.11.0",
    "cac": "6.7.14",
    "consola": "3.4.2",
    "dotenv": "17.2.1",
    "eta": "3.5.0",
    "giget": "2.0.0",
    "glob": "11.0.3",
    "openai": "5.13.1",
    "package-manager-detector": "1.3.0",
    "semver": "7.7.2",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "@vitest/ui": "3.2.4",
    "happy-dom": "18.0.1",
    "memfs": "4.36.3",
    "msw": "2.10.5",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
