{
  "name": "@bfra.me/create",
  "version": "0.5.22",
  "description": "A command line utility to create new packages from customizable templates.",
  "keywords": [
    "cli",
    "create",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfra-me/works.git",
    "directory": "packages/create"
  },
  "license": "MIT",
  "author": "Marcus R. Brown <contact@bfra.me>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create": "./dist/cli.js"
  },
  "files": [
    "!**/*.map",
    "dist",
    "src",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "prepack": "pnpm run build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.71.0",
    "@clack/prompts": "0.11.0",
    "cac": "6.7.14",
    "consola": "3.4.2",
    "dotenv": "17.2.3",
    "eta": "4.4.1",
    "giget": "2.0.0",
    "glob": "13.0.0",
    "openai": "6.9.1",
    "package-manager-detector": "1.5.0",
    "semver": "7.7.3"
  },
  "devDependencies": {
    "@bfra.me/works": "workspace:*",
    "happy-dom": "20.0.10",
    "memfs": "4.51.0",
    "msw": "2.12.3"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
