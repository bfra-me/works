{
    "version": "0.2.0",
    "configurations": [
        // Configuration for running the Astro development server in a terminal
        // This configuration is set to run in the 'docs' directory of the workspace
        {
            "command": "./node_modules/.bin/astro dev",
            "name": "Development server",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/docs"
        }
    ]
}
