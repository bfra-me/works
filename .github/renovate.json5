{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'security:openssf-scorecard',

    'github>bfra-me/renovate-config#v3.9.2',
    'github>bfra-me/renovate-config:internal.json5#v3.9.2',
  ],
  addLabels: ['{{{parentDir}}}'],
  automergeType: 'pr',
  packageRules: [
    {
      description: 'Keep the bfra-me/renovate-config preset pinned.',
      matchPackageNames: ['bfra-me/renovate-config'],
      rangeStrategy: 'pin',
      updatePinnedDependencies: false,
    },
    {
      description: 'Disable updates of `sdk` packages under packages/api-core/test-utils',
      matchFileNames: ['packages/api-core/test-utils/sdks/**/package.json'],
      enabled: false,
    },
  ],
  patch: {
    automerge: true,
    enabled: true,
  },
  postUpgradeTasks: {
    commands: ['pnpm run bootstrap'],
    executionMode: 'branch',
  },
  prCreation: 'not-pending',
  rebaseWhen: 'auto',
}
