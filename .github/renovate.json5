{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>bfra-me/renovate-config#v3',
    'github>bfra-me/renovate-config:internal.json5#v3',
    'security:openssf-scorecard',
    'npm:unpublishSafe',
  ],
  addLabels: ['{{{parentDir}}}'],
  automergeType: 'pr',
  ignorePaths: [
    '**/node_modules/**',
    '**/test/**',
    '**/dist/**',
    'packages/api-core/test-utils/sdks/**',
  ],
  ignorePresets: ['mergeConfidence:age-confidence-badges', 'mergeConfidence:all-badges'],
  packageRules: [
    {
      description: 'Group packages from @readmeio/oas monorepo together.',
      matchSourceUrls: ['https://github.com/readmeio/oas'],
      matchUpdateTypes: ['digest', 'patch', 'minor', 'major'],
      groupName: '@readmeio/oas monorepo',
      groupSlug: 'readmeio-oas-monorepo',
    },
    {
      description: 'Group packages from @readmeio/api monorepo together.',
      matchSourceUrls: ['https://github.com/readmeio/api'],
      matchUpdateTypes: ['digest', 'patch', 'minor', 'major'],
      groupName: '@readmeio/api monorepo',
      groupSlug: 'readmeio-api-monorepo',
    },
    {
      description: 'Enable SemVer digest pinning of bfra.me Renovate config presets.',
      matchDatasources: ['github-tags'],
      matchPackageNames: ['bfra-me/renovate-config'],
      updatePinnedDependencies: false,
    },
    {
      description: 'Enable SemVer digest pinning of bfra.me Renovate config presets.',
      matchDatasources: ['github-tags'],
      matchPackageNames: ['bfra-me/renovate-config'],
      matchUpdateTypes: ['major'],
      updatePinnedDependencies: true,
    },
    {
      description: 'Pin fetch-mock to version 11.',
      matchPackageNames: ['fetch-mock'],
      allowedVersions: '<12.0.0',
    },
    {
      description: 'Show Merge Confidence, OpenSSF Scorecard, and Sourcegraph badges for Renovate dependencies.',
      matchDatasources: ['go', 'maven', 'npm', 'nuget', 'packagist', 'pypi', 'rubygems'],
      matchUpdateTypes: ['patch', 'minor', 'major'],
      prBodyColumns: [
        'Package',
        'Type',
        'Update',
        'Change',
        'Pending',
        'Age',
        'Confidence',
        'Sourcegraph',
      ],
    },
    {
      description: 'Show Merge Confidence, OpenSSF Scorecard, and Sourcegraph badges for Renovate dependencies.',
      matchDatasources: ['go', 'maven', 'npm', 'nuget', 'packagist', 'pypi', 'rubygems'],
      matchUpdateTypes: ['patch', 'minor', 'major'],
      matchSourceUrls: ['https://github.com/**'],
      prBodyColumns: [
        'Package',
        'Type',
        'Update',
        'Change',
        'Pending',
        'OpenSSF',
        'Age',
        'Confidence',
        'Sourcegraph',
      ],
    },
  ],
  patch: {
    automerge: true,
    enabled: true,
  },
  platformAutomerge: false,
  postUpgradeTasks: {
    commands: ['pnpm install --frozen-lockfile', 'pnpm fix', 'pnpm format'],
    executionMode: 'branch',
  },
  prBodyDefinitions: {
    Sourcegraph: '[![code search for "{{{depName}}}"](https://sourcegraph.com/search/badge?q=repo:%5Egithub%5C.com/{{{repository}}}%24+case:yes+-file:package%28-lock%29%3F%5C.json+{{{depName}}}&label=matches)](https://sourcegraph.com/search?q=repo:%5Egithub%5C.com/{{{repository}}}%24+case:yes+-file:package%28-lock%29%3F%5C.json+{{{depName}}})',
  },
  prCreation: 'not-pending',
  rebaseWhen: 'auto',
}
