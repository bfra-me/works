{
  "name": "@bfra.me/works",
  "private": true,
  "description": "bfra.me tools and components",
  "scripts": {
    "build": "tsc -b packages",
    "watch": "yarn build --watch",
    "clean": "rimraf \"packages/**/dist\" \"**/*.tsbuildinfo\"",
    "test": "yarn workspaces run test"
  },
  "keywords": [
    "bfra.me",
    "Build Frameworks",
    "CLI",
    "Components",
    "Tools"
  ],
  "author": "Marcus R. Brown <contact@bfra.me>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "dists"
    ]
  },
  "devDependencies": {
    "@types/node": "18.15.7",
    "eslint": "8.36.0",
    "rimraf": "4.4.1",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  }
}
