{
  "name": "@bfra.me/works",
  "private": true,
  "packageManager": "pnpm@8.12.1",
  "description": "bfra.me tools and components",
  "scripts": {
    "build": "pnpm -r run build",
    "watch": "pnpm run build --watch",
    "clean": "rimraf \"packages/**/dist\" \"**/*.tsbuildinfo\"",
    "lint": "pnpm -r run --parallel lint",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "test": "pnpm -r run --parallel test"
  },
  "keywords": [
    "bfra.me",
    "Build Frameworks",
    "CLI",
    "Components",
    "Tools"
  ],
  "author": "Marcus R. Brown <contact@bfra.me>",
  "license": "MIT",
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "dists"
    ]
  },
  "devDependencies": {
    "@tsconfig/strictest": "2.0.2",
    "@types/node": "20.10.5",
    "eslint": "8.56.0",
    "prettier": "3.1.1",
    "rimraf": "5.0.5",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  }
}
