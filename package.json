{
  "name": "@bfra.me/works",
  "private": true,
  "packageManager": "pnpm@8.7.0",
  "description": "bfra.me tools and components",
  "scripts": {
    "build": "pnpm -r run build",
    "watch": "pnpm run build --watch",
    "clean": "rimraf \"packages/**/dist\" \"**/*.tsbuildinfo\"",
    "lint": "pnpm -r run --parallel lint",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "test": "pnpm -r run --parallel test"
  },
  "keywords": [
    "bfra.me",
    "Build Frameworks",
    "CLI",
    "Components",
    "Tools"
  ],
  "author": "Marcus R. Brown <contact@bfra.me>",
  "license": "MIT",
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "dists"
    ]
  },
  "devDependencies": {
    "@types/node": "18.17.12",
    "eslint": "8.48.0",
    "prettier": "3.0.2",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
